<div class="login-page-wrap">
  <div class="login-page-content">
    <div class="login-box">
      <div class="item-logo">
        <img src="/img/logo2.png" alt="logo">
      </div>
      <%= form_with(model: user, local: true, class: "login-form") do |form| %>
        <% if user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
            <ul>
              <% user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= form.label :name, "Name" %>
          <%= form.text_field :name, class: "form-control", placeholder: "Name" %>
          <i class="far fa-envelope"></i>
        </div>
        <div class="form-group" data-select2-id="14">
          <%= form.label :role_id, "Account Name" %>
          <%= form.select("role_id", Role.all.map { |p| [p.name, p.id] }, {}, { class: "form-control select2 select2-container select2-container--default select2-container--below" }) %>
          <% if @user.errors.messages[:role_id].present? %>
            <% @user.errors.messages[:role_id].each do |mass| %>
              <%= mass %>
            <% end %>
          <% end %>
        </div>
        <div class="form-group">
          <%= form.label :email, "Email" %>
          <%= form.email_field :email, class: "form-control", placeholder: "Email" %>
          <i class="far fa-envelope"></i>
        </div>
        <div class="form-group">
          <%= form.label :password, "Password" %>
          <%= form.password_field :password, placeholder: "Password", class: "form-control" %>
          <i class="fas fa-lock"></i>
        </div>
        <div class="form-group">
          <%= form.label :password_confirmation, "Confirmation Password" %>
          <%= form.password_field :password_confirmation, placeholder: "Confirmation Password", class: "form-control" %>
          <i class="fas fa-lock"></i>
        </div>
        <div class="form-group d-flex align-items-center justify-content-between">
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="remember-me">
            <label for="remember-me" class="form-check-label">Remember Me</label>
          </div>
        </div>
        <div class="form-group">
          <%= form.submit "Sign In", class: "login-btn" %>
        </div>
      <% end %>
